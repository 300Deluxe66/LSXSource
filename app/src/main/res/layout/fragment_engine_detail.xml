        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="torque"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_compression_text"
        android:layout_below="@id/engine_torque"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Compression"
        android:textColor="#d9d9d9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_compression"
        android:layout_below="@id/engine_compression_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="compression"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_bore_text"
