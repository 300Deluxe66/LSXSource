        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Bore"
        android:textColor="#d9d9d9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_bore"
        android:layout_below="@id/engine_bore_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="bore"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_stroke_text"
        android:layout_below="@id/engine_bore"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Stroke"
        android:textColor="#d9d9d9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_stroke"
        android:layout_below="@id/engine_stroke_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="stroke"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/engine_intakePortType_text"
