<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.newapp.lsxsource.Home">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="1"
        android:rowCount="4">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/all"
            android:background="@drawable/all"
            android:onClick="onClick"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="5dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/aluminum"
            android:background="@drawable/aluminum"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="5dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/vortec"
            android:background="@drawable/vortec"
            android:onClick="onClick"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="5dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/lsx"
            android:background="@drawable/lsx"
            android:onClick="onClick"
            android:layout_row="3"
            android:layout_column="0" />
    </GridLayout>

</RelativeLayout>